<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="10dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/nool_pid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toStartOf="@+id/nool_del"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:text="no data found..!" />

        <TextView
            android:id="@+id/nool_wp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="24dp"
            android:text="WP"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/nool_pid" />

        <TextView
            android:id="@+id/nool_wq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:text="WQ"
            card_view:layout_constraintEnd_toStartOf="@+id/nool_tp"
            card_view:layout_constraintHorizontal_bias="0.502"
            card_view:layout_constraintStart_toEndOf="@+id/nool_wp"
            card_view:layout_constraintTop_toBottomOf="@+id/nool_pid" />

        <TextView
            android:id="@+id/nool_tp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="24dp"
            android:text="TotalPrice"
            card_view:layout_constraintBottom_toTopOf="@+id/nool_p"
            card_view:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/nool_cp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="CP"
            card_view:layout_constraintBottom_toTopOf="@+id/nool_date"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/nool_wp" />

        <TextView
            android:id="@+id/nool_cq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="8dp"
            android:text="CQ"
            card_view:layout_constraintEnd_toStartOf="@+id/nool_p"
            card_view:layout_constraintHorizontal_bias="0.402"
            card_view:layout_constraintStart_toEndOf="@+id/nool_cp"
            card_view:layout_constraintTop_toBottomOf="@+id/nool_wq" />

        <TextView
            android:id="@+id/nool_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="24dp"
            android:text="Paid"
            card_view:layout_constraintBottom_toTopOf="@+id/nool_notpaid"
            card_view:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/nool_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:text="Date"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toStartOf="@+id/nool_notpaid"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/nool_notpaid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="16dp"
            android:text="Not Paid"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/nool_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="Delete"
            card_view:layout_constraintBottom_toTopOf="@+id/nool_tp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>